---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"] & {
	keywords?: string;
};

const { title, description, pubDate, updatedDate, keywords } =
	Astro.props;

// Format date in Korean
function formatDate(date: Date): string {
	return date.toLocaleDateString("ko-KR", {
		year: "numeric",
		month: "long",
		day: "numeric",
	});
}
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} keywords={keywords || ""} />
		<link
			href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css"
			rel="stylesheet"
		/>
	</head>

	<body>
		<Header />
		<main class="blog-post-main">
			<article class="blog-post-article">
				<!-- Header Section -->
				<header class="blog-post-header">
					<h1 class="blog-post-title">{title}</h1>
					<div class="blog-post-meta">
						<span class="blog-post-author">Minji</span>
						<span class="blog-post-date">{formatDate(pubDate)}</span>
					</div>
				</header>

				<!-- Main Content with Sidebar -->
				<div class="blog-post-content-wrapper">
					<!-- Main Content -->
					<div class="blog-post-content">
						<div class="blog-post-body">
							<slot />
						</div>
					</div>

					<!-- Table of Contents Sidebar -->
					<aside class="blog-post-sidebar">
						<div class="toc-container">
							<h2 class="toc-title">ON THIS PAGE</h2>
							<nav class="toc-nav" id="toc-nav">
								<!-- Table of contents will be generated by JavaScript -->
							</nav>
						</div>
					</aside>
				</div>
			</article>
		</main>
		<Footer />

		<script>
			// Generate Table of Contents
			function generateTOC() {
				const content = document.querySelector(".blog-post-body");
				const tocNav = document.getElementById("toc-nav");
				if (!content || !tocNav) return;

				const headings = content.querySelectorAll("h2, h3, h4");
				if (headings.length === 0) {
					tocNav.innerHTML = "<p class='toc-empty'>No headings found</p>";
					return;
				}

				let tocHTML = "<ul class='toc-list'>";
				let currentLevel = 0;

				headings.forEach((heading, index) => {
					const level = parseInt(heading.tagName.charAt(1));
					const id = `heading-${index}`;
					heading.id = id;

					// Adjust for nested lists
					if (level > currentLevel) {
						tocHTML += "<ul class='toc-list toc-nested'>";
					} else if (level < currentLevel) {
						for (let i = level; i < currentLevel; i++) {
							tocHTML += "</ul>";
						}
					}

					tocHTML += `<li class="toc-item toc-level-${level}">`;
					tocHTML += `<a href="#${id}" class="toc-link">${heading.textContent}</a>`;
					tocHTML += "</li>";

					currentLevel = level;
				});

				// Close remaining nested lists
				for (let i = 2; i < currentLevel; i++) {
					tocHTML += "</ul>";
				}

				tocHTML += "</ul>";
				tocNav.innerHTML = tocHTML;

				// Smooth scroll for TOC links and apply styles
				tocNav.querySelectorAll("a").forEach((link) => {
					// Apply styles directly
					link.style.color = "#b3b3b3";
					link.style.textDecoration = "none";
					
					link.addEventListener("click", (e) => {
						e.preventDefault();
						const targetId = link.getAttribute("href")?.substring(1);
						const target = document.getElementById(targetId);
						if (target) {
							target.scrollIntoView({ behavior: "smooth", block: "start" });
							// Update URL without scrolling
							window.history.pushState(null, "", `#${targetId}`);
						}
					});
				});
			}

			// Highlight current section in TOC
			function highlightCurrentSection() {
				const headings = document.querySelectorAll(".blog-post-body h2, .blog-post-body h3, .blog-post-body h4");
				const tocLinks = document.querySelectorAll(".toc-link");

				if (headings.length === 0 || tocLinks.length === 0) return;

				const observer = new IntersectionObserver(
					(entries) => {
						entries.forEach((entry) => {
							if (entry.isIntersecting) {
								const id = entry.target.id;
								tocLinks.forEach((link) => {
									link.classList.remove("toc-link-active");
									// Ensure styles are applied
									link.style.color = "#b3b3b3";
									link.style.textDecoration = "none";
									if (link.getAttribute("href") === `#${id}`) {
										link.classList.add("toc-link-active");
										link.style.color = "#999999";
									}
								});
							}
						});
					},
					{
						rootMargin: "-20% 0px -70% 0px",
					}
				);

				headings.forEach((heading) => observer.observe(heading));
			}

			// Remove inline styles from code blocks and apply padding
			function fixCodeBlockStyles() {
				const codeBlocks = document.querySelectorAll(".blog-post-body pre");
				codeBlocks.forEach((pre) => {
					// Remove inline padding if it exists
					if (pre.style.padding) {
						pre.style.padding = "";
					}
					// Ensure padding is applied via CSS
					if (!pre.style.padding) {
						pre.style.padding = "20px";
					}
				});
			}

			// Apply styles to TOC links
			function applyTOCLinkStyles() {
				const tocLinks = document.querySelectorAll(".toc-link");
				tocLinks.forEach((link) => {
					link.style.color = "#b3b3b3";
					link.style.textDecoration = "none";
				});
			}

			// Initialize on page load
			document.addEventListener("DOMContentLoaded", () => {
				generateTOC();
				highlightCurrentSection();
				fixCodeBlockStyles();
				// Apply TOC link styles after TOC is generated
				applyTOCLinkStyles();
			});
		</script>

		<style is:global>
			:root {
				--color-bg: #ffffff;
				--color-text: #000000;
				--color-sub: #666666;
				--color-border: #e5e5e5;
				--color-accent: #3b82f6;
			}


			html,
			body {
				margin: 0;
				padding: 0;
				background: var(--color-bg);
				color: var(--color-text);
				font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
				line-height: 1.7;
			}

			.blog-post-main {
				max-width: 1400px;
				margin: 0 auto;
				padding: 40px 40px 80px 40px;
			}

			.blog-post-article {
				width: 100%;
			}

			/* Header Section */
			.blog-post-header {
				text-align: center;
				margin-bottom: 60px;
				padding-bottom: 40px;
				border-bottom: 1px solid var(--color-border);
			}

			.blog-post-title {
				font-size: 48px;
				font-weight: 700;
				color: var(--color-text);
				margin: 0 0 24px 0;
				line-height: 1.3;
				letter-spacing: -0.5px;
				word-break: keep-all;
				overflow-wrap: break-word;
			}

			.blog-post-meta {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 16px;
				margin-bottom: 32px;
				font-size: 0.95rem;
				color: var(--color-sub);
			}

			.blog-post-author {
				font-weight: 500;
			}

			.blog-post-date {
				font-weight: 400;
			}


			/* Content Wrapper - 2 Column Layout */
			.blog-post-content-wrapper {
				display: flex;
				gap: 60px;
				align-items: flex-start;
			}

			/* Main Content */
			.blog-post-content {
				flex: 1;
				min-width: 0;
			}

			.blog-post-body {
				max-width: 800px;
				margin: 0 auto;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-size: 16px;
				color: #333333;
			}

			.blog-post-body * {
				box-sizing: border-box;
			}

			/* Typography - Blog Post Headings */
			/* 
			 * CSS 특이성을 이용하여 global.css의 reset을 자연스럽게 override
			 * - global.css: h2 (특이성: 0,0,0,1)
			 * - 여기: .blog-post-body h2 (특이성: 0,0,1,1) <- 더 높아서 자동으로 적용됨
			 * !important 없이도 충분히 작동합니다.
			 */
			.blog-post-body h2 {
				font-size: 1.25rem;
				font-weight: 600;
				margin: 40px 0 16px 0;
				padding: 0;
				color: #000000;
				line-height: 1.6;
				letter-spacing: -0.01em;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			/* Content Title - h3 */
			.blog-post-body h3 {
				font-size: 1.15rem;
				font-weight: 600;
				margin: 32px 0 14px 0;
				padding: 0;
				color: #1a1a1a;
				line-height: 1.6;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body h4 {
				font-size: 1.05rem;
				font-weight: 600;
				margin: 28px 0 12px 0;
				padding: 0;
				color: #2a2a2a;
				line-height: 1.6;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body {
				font-size: 16px;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body p {
				margin: 0 0 20px 0;
				font-size: 16px;
				line-height: 1.8;
				color: #333333;
				word-break: keep-all;
				overflow-wrap: break-word;
				hyphens: auto;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body ul,
			.blog-post-body ol {
				margin: 0 0 20px 0;
				padding-left: 24px;
			}

			.blog-post-body li {
				margin-bottom: 10px;
				line-height: 1.8;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-size: 16px;
				color: #333333;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body ul li::marker {
				color: #666666;
			}

			.blog-post-body blockquote {
				margin: 32px 0;
				padding: 20px 24px;
				border-left: 4px solid var(--color-text);
				background: transparent;
				font-style: italic;
				position: relative;
				font-family: "Pretendard", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
			}

			.blog-post-body blockquote::before {
				content: '"';
				font-size: 4rem;
				position: absolute;
				left: 8px;
				top: -10px;
				opacity: 0.2;
				font-family: serif;
			}

			.blog-post-body code {
				background: #f5f5f5;
				color: #333333;
				padding: 2px 6px;
				border-radius: 4px;
				font-size: 0.9em;
				font-family: "Fira Code", "Courier New", monospace;
				border: 1px solid #e0e0e0;
			}

			.blog-post-body pre {
				background: #ffffff;
				color: #333333;
				border-radius: 8px;
				overflow-x: auto;
				margin: 32px 0;
				border: 1px solid #e5e5e5;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
				line-height: 1.6;
				font-size: 0.9rem;
				padding: 20px;
			}

			/* Shiki code blocks with astro-code class */
			.blog-post-body pre.astro-code,
			.blog-post-body pre[class*="astro-code"],
			.blog-post-body pre[class*="github-dark"],
			.blog-post-body pre[class*="github-light"] {
				padding: 20px;
			}

			.blog-post-body pre code {
				background: transparent;
				color: inherit;
				padding: 0;
				border: none;
				font-size: inherit;
			}

			/* Syntax highlighting for code blocks - Light theme */
			.blog-post-body pre .keyword,
			.blog-post-body pre .operator {
				color: #0066cc;
			}

			.blog-post-body pre .string {
				color: #008000;
			}

			.blog-post-body pre .number {
				color: #d19a66;
			}

			.blog-post-body pre .function {
				color: #0066cc;
			}

			.blog-post-body pre .comment {
				color: #999999;
				font-style: italic;
			}

			.blog-post-body a {
				color: var(--color-text);
				text-decoration: underline;
				text-underline-offset: 2px;
				transition: opacity 0.2s ease;
			}

			.blog-post-body a:hover {
				opacity: 0.6;
			}


			.blog-post-body strong {
				font-weight: 600;
			}

			/* Images */
			.blog-post-body img {
				max-width: 100%;
				height: auto;
				display: block;
				margin: 32px auto;
				border-radius: 8px;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			}

			/* Sidebar */
			.blog-post-sidebar {
				flex: 0 0 240px;
				position: sticky;
				top: 100px;
				align-self: flex-start;
			}

			.toc-container {
				padding: 0;
			}

			.toc-title {
				font-size: 12px;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 1px;
				margin: 0 0 20px 0;
				color: #999999;
				line-height: 1.4;
			}

			/* Override user agent stylesheet for h2 in sidebar */
			.blog-post-sidebar h2,
			.blog-post-sidebar h2.toc-title,
			h2.toc-title {
				font-size: 12px;
				font-weight: 600;
				margin: 0 0 20px 0;
			}

			.toc-nav {
				font-size: 14px;
			}

			.toc-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.toc-item {
				margin-bottom: 10px;
			}

			.blog-post-sidebar .toc-nav a,
			.blog-post-sidebar .toc-nav a.toc-link,
			.blog-post-sidebar a.toc-link,
			.blog-post-sidebar .toc-link,
			a.toc-link {
				color: #b3b3b3;
				text-decoration: none;
				display: block;
				padding: 0;
				transition: color 0.2s ease;
				line-height: 1.5;
				word-break: keep-all;
				overflow-wrap: break-word;
				font-size: 14px;
			}

			.blog-post-sidebar .toc-link,
			.toc-level-3 .toc-link,
			.toc-level-4 .toc-link {
				font-size: 14px;
			}

			.blog-post-sidebar a.toc-link:hover,
			.blog-post-sidebar .toc-link:hover,
			a.toc-link:hover {
				color: #999999;
			}

			.blog-post-sidebar a.toc-link-active,
			.blog-post-sidebar .toc-link-active,
			a.toc-link-active {
				color: #999999;
				font-weight: 500;
			}

			.toc-nested {
				margin-left: 12px;
				margin-top: 6px;
			}


			.toc-empty {
				color: #999999;
				font-size: 14px;
				margin: 0;
			}

			/* Responsive */
			@media (max-width: 1024px) {
				.blog-post-content-wrapper {
					flex-direction: column;
					gap: 40px;
				}

				.blog-post-sidebar {
					position: static;
					flex: 1 1 100%;
					width: 100%;
				}

				.toc-container {
					border-top: 1px solid var(--color-border);
					padding-top: 32px;
				}
			}

			@media (max-width: 768px) {
				.blog-post-main {
					padding: 24px 20px 60px 20px;
				}

				.blog-post-title {
					font-size: 36px;
				}

				.blog-post-header {
					margin-bottom: 40px;
					padding-bottom: 32px;
				}


				.blog-post-body {
					max-width: 100%;
				}

				.blog-post-body h2 {
					font-size: 1.2rem;
					margin: 36px 0 16px 0;
				}

				.blog-post-body h3 {
					font-size: 1.1rem;
					margin: 28px 0 14px 0;
				}

				.blog-post-body h4 {
					font-size: 1.05rem;
					margin: 24px 0 12px 0;
				}

			}
		</style>
	</body>
</html>
