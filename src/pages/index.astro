				{
					title: "ÏöîÏ¶ò Í∞úÎ∞úÏûê",
					author: "ÏûÑÎèôÏ§Ä Ïô∏",
					img: "/heroImgs/book4.jpeg",
				},
				{
					title: "Î∞±ÏÇ¥ÍπåÏßÄ Ïú†ÏæåÌïòÍ≤å ÏÇ¨ÎäîÎ≤ï",
					author: "",
					img: "/heroImgs/book5.jpeg",
				},
				{
					title: "Îã¨Î¶¨Í∏∞Î•º ÎßêÌï†Îïå ÎÇ¥Í∞Ä ÌïòÍ≥†Ïã∂ÏùÄ Ïù¥ÏïºÍ∏∞",
					author: "Î¨¥ÎùºÏπ¥ÎØ∏ ÌïòÎ£®ÌÇ§",
					img: "/heroImgs/book6.jpg",
				},
			];

			// Fade-in Ïï†ÎãàÎ©îÏù¥ÏÖò
			window.addEventListener("DOMContentLoaded", () => {
				const row = document.getElementById("book-row");

				function createCard({ title, author, img }) {
					const div = document.createElement("div");
					div.className = "book-card";
					div.innerHTML = `
						<div class="book-cover-wrapper">
							<img src="${img}" alt="${title} ÌëúÏßÄ" class="book-cover" onerror="this.onerror=null;this.src='/default-cover.png'" />
